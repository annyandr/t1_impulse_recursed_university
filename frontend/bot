<script>
    function changeTheme(theme) {
        const chatContainer = document.querySelector('.chat-container');

        // –£–¥–∞–ª–∏—Ç—å –≤—Å–µ –ø—Ä–µ–¥—ã–¥—É—â–∏–µ –∫–ª–∞—Å—Å—ã —Ç–µ–º
        chatContainer.classList.remove('green-theme', 'blue-theme', 'dark-theme');

        // –î–æ–±–∞–≤–∏—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—É—é —Ç–µ–º—É
        chatContainer.classList.add(`${theme}-theme`);
    }

    function selectOption(option) {
        const chatBox = document.getElementById('chatBox');
        
        // –î–æ–±–∞–≤–∏—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ –æ –≤—ã–±–æ—Ä–µ
        const userMessage = document.createElement('div');
        userMessage.className = 'chat-message user';
        userMessage.textContent = `–í—ã –≤—ã–±—Ä–∞–ª–∏: ${option}`;
        chatBox.appendChild(userMessage);

        // –û—Ç–≤–µ—Ç —á–∞—Ç-–±–æ—Ç–∞
        const botMessage = document.createElement('div');
        botMessage.className = 'chat-message bot';
        botMessage.textContent = `–ò–Ω—Ç–µ—Ä–µ—Å–Ω—ã–π –≤—ã–±–æ—Ä! –ö–∞–∫ —è –º–æ–≥—É –µ—â–µ –ø–æ–º–æ—á—å?`;
        chatBox.appendChild(botMessage);

        chatBox.scrollTop = chatBox.scrollHeight; // –ü—Ä–æ–∫—Ä—É—Ç–∫–∞ –≤–Ω–∏–∑
    }

    function checkEnter(event) {
        if (event.key === 'Enter') {
            sendMessage();
        }
    }

    function sendMessage() {
        const messageInput = document.getElementById('messageInput');
        const chatBox = document.getElementById('chatBox');

        const userMessage = document.createElement('div');
        userMessage.className = 'chat-message user';
        userMessage.textContent = messageInput.value;
        chatBox.appendChild(userMessage);

        messageInput.value = ''; // –û—á–∏—Å—Ç–∏—Ç—å –ø–æ–ª–µ –≤–≤–æ–¥–∞

        const botMessage = document.createElement('div');
        botMessage.className = 'chat-message bot';
        botMessage.textContent = '–Ø –≤–∞—Å —É—Å–ª—ã—à–∞–ª!';
        chatBox.appendChild(botMessage);

        chatBox.scrollTop = chatBox.scrollHeight; // –ü—Ä–æ–∫—Ä—É—Ç–∫–∞ –≤–Ω–∏–∑
    }
</script>

